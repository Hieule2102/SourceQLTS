@model Source.Models.NGUOI_DUNG

@{

}
<main>
    <section id="login">
        <div class="home container">
            
            
        </div>
        <div class="dang-nhap">
            <h4>Đăng nhập</h4>
            @using (Html.BeginForm("Index", "DangNhap", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <form action="">
                    <div class="form-group-dn">
                        <label for="">Tài khoản: </label>
                        <input type="text" name="TEN_DANG_NHAP" placeholder="" />
                    </div>
                    <div class="form-group-dn">
                        <label for="">Mật khẩu:</label>
                        <input type="password" name="MAT_KHAU" placeholder="" />
                    </div>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <p style="color: red">@ViewBag.ErrorMessage</p>
                    }
                    <div class="submit">
                        <button class="them" type="submit">Đăng nhập</button>
                    </div>

                </form>
            }

        </div>
    </section>

</main>