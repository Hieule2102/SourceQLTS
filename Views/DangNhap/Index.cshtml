@model Source.Models.NGUOI_DUNG

@{
    ViewBag.Title = "Index";
}
    <main>
        <section id="login" class="login-show">
            <div class="dang-nhap">
                <h4>Đăng nhập</h4>
                @using (Html.BeginForm("Index", "DangNhap"))
                {
                    <form action="">
                        <div class="form-group-dn">
                            <label for="">Tài khoản: </label>
                            <input type="text" name="TEN_DANG_NHAP"  placeholder="" />
                        </div>
                        <div class="form-group-dn">
                            <label for="">Mật khẩu:</label>
                            <input type="password" name="MAT_KHAU"  placeholder="" />
                        </div>

                        @if (ViewBag.ErrorMessage != null)
                        {
                            <p style="color: red">@ViewBag.ErrorMessage</p>
                        }

                        <button type="submit">Đăng nhập</button>
                    </form>
                }
                <a class="login-close"><i class="far fa-times-circle fa-2x"></i></a>
            </div>
        </section>
        <div class="home container">
            <h2>QUẢN LÝ TÀI SẢN CÔNG NGHỆ THÔNG TIN</h2>
            <h1>NGÂN HÀNG KIÊN LONG</h1>
        </div>
    </main>


