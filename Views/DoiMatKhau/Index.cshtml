@model Source.Models.NGUOI_DUNG

@{
    ViewBag.Title = "DoiMatKhau";
}

<main>
    <section id="login">
        <div class="dang-nhap">
            <h4>ĐỔI MẬT KHẨU</h4>
            @if (ViewBag.ErrorMessage != null)
            {
                <p id="tb-sm">@ViewBag.ErrorMessage</p>
            }
            @using (Html.BeginForm("Index", "DoiMatKhau", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <form action="">
                    <div class="form-group-dn">
                        <label for="">Tên đăng nhập:</label>
                        @ViewBag.TEN_DANG_NHAP
                    </div>
                    <div class="form-group-dn">
                        <label for="">Mật khẩu cũ:</label>
                        <input type="password" name="MAT_KHAU_CU" placeholder="" />
                    </div>

                    <div class="form-group-dn">
                        <label for="">Mật khẩu mới:</label>
                        <input type="password" name="MAT_KHAU_MOI" placeholder="" />
                    </div>

                    <div class="form-group-dn">
                        <label for="">Xác nhận mật khẩu mới:</label>
                        <input type="password" name="XAC_NHAN_MAT_KHAU" placeholder="" />
                    </div>



                    <button type="submit">Xác nhận</button>
                </form>
            }

        </div>
    </section>
</main>

